<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/WzUXRibbon;component/Themes/ColorThemes/ColorTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Fluent.Ribbon.Styles.RibbonSeparator"
           TargetType="{x:Type Separator}">
        <Setter Property="Margin" Value="4 0 4 0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Rectangle Width="1"
                               VerticalAlignment="Stretch"
                               Stroke="{DynamicResource Fluent.Ribbon.Brushes.GroupSeparator.Background}"
                               StrokeThickness="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>